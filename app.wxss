/**app.wxss**/

page {
    height: 100%;
    overflow: hidden;
}

.bg_color {
    background-color: #f0f0f0;
}

.main_bg_color {
    background-color: #fa9144;
}

.main_color {
    color: #fa9144;
}

.strong_title_color {
    color: #000;
}

.title_color {
    color: #333;
}

.light_title_color {
    color: #666;
}

.des_color {
    color: #999;
}

.container {
    position: relative;
    overflow: auto;
    height: 100%;
    box-sizing: border-box;
}

view, input, textarea, scroll-view ,image{
    box-sizing: border-box;
}

scroll-view {
    overflow: auto;
}

.blur_bg {
    display: none;
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100%;
    filter: blur(60rpx);
    overflow: hidden;
    z-index: -1;
}

.blur_bg image {
    width: 100%;
    height: 90%;
    margin-top: 10%;
    opacity: 0.3;
}

/* 回到顶部按钮-begin */

.scroll_top {
    position: fixed;
    z-index: 99;
    bottom: -100rpx;
    right: 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    background-color: rgba(0, 0, 0, 0.6);
    opacity: 0;
    transition: 0.3s;
}

.scroll_top.active {
    bottom: 80rpx;
    opacity: 1;
}

.scroll_top .iconfont {
    font-size: 40rpx;
    color: #fff;
}

