.pull_scroll_view {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.scroll_view {
    position: relative;
    width: 100%;
    height: 100%;
}

.content {
    min-height: 100%;
}

.pull_down {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    box-sizing: content-box;
    transform: translateZ(0);
}

.loading_tip {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 26rpx;
    color: #fa9144;
}

.loading_tip .iconfont{
    margin-right: 10rpx;
    font-family: 'iconfont';
    font-size: 36rpx;
}

.icon-chenggong:before {
  content: '\e638';
}

.loading_gif {
    width: 68rpx;
    height: 68rpx;
}